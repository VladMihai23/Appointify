@model WebApplication1.Models.Appointment

<h2>Confirmare ștergere</h2>

<p>Ești sigur că vrei să ștergi această programare?</p>

<ul>
    <li><strong>Serviciu:</strong> @Model.ServiceName</li>
    <li><strong>Dată și oră:</strong> @Model.DateTime.ToLocalTime()</li>
</ul>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="UserId" />

    <button type="submit" class="btn btn-danger">Șterge</button>
    <a asp-action="MyAppointments" class="btn btn-secondary">Renunță</a>
</form>