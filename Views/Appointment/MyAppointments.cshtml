@model IEnumerable<WebApplication1.Models.Appointment>

<h2>Programările mele</h2>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Serviciu</th>
        <th>Data și Ora</th>
        <th>Status</th>
        <th>Acțiuni</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var appointment in Model)
    {
        <tr>
            <td>@appointment.ServiceName</td>
            <td>@appointment.DateTime.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
            <td>@appointment.Status</td>
            <td>
                <a asp-action="Edit" asp-route-id="@appointment.Id" class="btn btn-sm btn-warning">Editează</a>
                <a asp-action="Delete" asp-route-id="@appointment.Id" class="btn btn-sm btn-danger">Șterge</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
}
