@model AppUser

@{
    ViewData["Title"] = "EditProfile";
}

<body class="bg-light">
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 bg-white p-4 shadow rounded">
            <h3 class="text-center mb-4">Editează Profilul</h3>

            <form method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                
                <div class="text-center">
                    <img src="@(!string.IsNullOrEmpty(Model.ProfilePicturePath) ? Model.ProfilePicturePath : "https://via.placeholder.com/150")"
                         alt="Profil" class="rounded-circle mb-3" width="150">
                    <br>
                    <input type="file" name="ProfilePicture" class="form-control mb-3" accept="image/*">
                </div>

                
                <div class="mb-3">
                    <label class="form-label">Nume de utilizator:</label>
                    <input type="text" class="form-control" asp-for="UserName">
                </div>

                
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" asp-for="Email" required>
                </div>

                
                <div class="mb-3">
                    <label class="form-label">Telefon</label>
                    <input type="text" class="form-control" asp-for="PhoneNumber" required>
                </div>

                
                <div class="mb-3">
                    <label class="form-label">Adresa</label>
                    <input type="text" class="form-control" asp-for="Address" required>
                </div>

                <button type="submit" class="btn btn-primary w-100">Salvează modificările</button>
            </form>

        </div>
    </div>

</div>
</body>
