@model AppUser

@{
    ViewData["Title"] = "ViewProfile";
}

<body class="bg-light">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    
                    <div class="text-center">
                        <img src="@(!string.IsNullOrEmpty(Model.ProfilePicturePath) ? Model.ProfilePicturePath : "https://via.placeholder.com/150")"
                             alt="Profil" class="rounded-circle mb-3" width="150">
                    </div>

                    <h3 class="card-title">@Model.UserName</h3>
                    <p class="text-muted">Client</p>

                    <ul class="list-group list-group-flush text-start">
                        <li class="list-group-item"><strong>Email:</strong>@Model.Email</li>
                        <li class="list-group-item"><strong>Telefon:</strong>@(Model.PhoneNumber ?? "Nespecificat")</li>
                        <li class="list-group-item"><strong>Data înregistrării:</strong>@Model.CreatedDate.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</li>
                        <li class="list-group-item"><strong>Adresa:</strong>@Model.Address</li>

                    </ul>

                    <div class="mt-3">
                        <a href="/Profile/EditProfile" class="btn btn-primary w-100 mb-2">Editează Profilul</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</body>